{
	"name": "@twocaretcat/tally-ts",
	"version": "0.1.0",
	"exports": {
		".": "./src/index.ts",
		"./legacy": "./src/legacy.ts"
	},
	"tasks": {
		"build:npm": "deno run --allow-read --allow-write --allow-env --allow-run=npm scripts/build-npm.ts"
	},
	"fmt": {
		"exclude": [
			"**/*.svg"
		],
		"useTabs": true,
		"lineWidth": 120,
		"singleQuote": true
	},
	"lint": {
		"rules": {
			"tags": [
				"recommended",
				"jsr"
			]
		}
	},
	"publish": {
		"exclude": [
			"node_modules",
			"npm",
			"dist",
			"scripts",
			".github",
			".git",
			"*.test.ts"
		]
	},
	"imports": {
		"@deno/dnt": "jsr:@deno/dnt@^0.42.3",
		"@std/expect": "jsr:@std/expect@^1.0.17",
		"@std/testing": "jsr:@std/testing@^1.0.16"
	}
}
