{
  "name": "@twocaretcat/tally-ts",
  "version": "1.0.0",
  "exports": {
    ".": "./src/index.ts",
    "./legacy": "./src/legacy.ts"
  },
  "tasks": {
    "build:npm": "deno run --allow-read --allow-write --allow-env --allow-run=npm scripts/build-npm.ts"
  },
  "fmt": {
    "exclude": [
      "**/*.svg"
    ],
    "useTabs": true,
    "lineWidth": 120,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended",
        "jsr"
      ]
    }
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "src/__tests__"
    ]
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@semantic-release/exec": "npm:@semantic-release/exec@^7.1.0",
    "@semantic-release/git": "npm:@semantic-release/git@^10.0.1",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "conventional-changelog-conventionalcommits": "npm:conventional-changelog-conventionalcommits@^9.1.0",
    "semantic-release": "npm:semantic-release@^24.2.9"
  }
}
